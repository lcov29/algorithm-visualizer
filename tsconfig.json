{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./node_modules",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "resolveJsonModule": true,
    "paths": {
      // prevent VS Code autocompletion to display relative module paths
      "@algorithm-visualizer/app": ["../packages/app"],
      "@algorithm-visualizer/random": ["../packages/random"],
      "@algorithm-visualizer/event-handling": ["../packages/event-handling"],
      "@algorithm-visualizer/data-structures/integer-range": [
        "../packages/data-structures/integer-range"
      ]
    }
  },
  "include": ["./packages/**/*"]
}
